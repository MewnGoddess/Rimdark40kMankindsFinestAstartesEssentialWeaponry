<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Bolter -->
  <ThingDef ParentName="BEWH_AstartesRangedBase">
    <defName>BEWH_AstartesBolter</defName>
    <label>bolter</label>
    <description>The Mk Vb boltgun is the iconic standard-issue firearm of the Adeptus Astartes. Firing mass-reactive rounds with deadly efficiency, it combines reliability, adaptability, and stopping power, making it the definitive Space Marine weapon. \n\nAvalible Loadout: Standard, Metal Storm</description>
    <graphicData>
      <texPath>Things/Weapons/BEWH_BoltCarbine</texPath>
      <shaderType>BEWH_CutoutThreeColor</shaderType>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.1</drawSize>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>4.6</Mass>
      <AccuracyTouch>0.6</AccuracyTouch>
      <AccuracyShort>0.7</AccuracyShort>
      <AccuracyMedium>0.6</AccuracyMedium>
      <AccuracyLong>0.4</AccuracyLong>
      <RangedWeapon_Cooldown>2.00</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <skillRequirements>
        <Crafting>11</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Steel>40</Steel>
      <Plasteel>55</Plasteel>
      <ComponentSpacer>3</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Core40k.Verb_ShootChangeableBullets</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BEWH_BolterRound</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>35.9</range>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>BEWH_SFX_BolterShot</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <comps Inherit="False">      <!-- CompProperties_AmmoChanger needs the weapon to not have CompEquipable, if it does you need to not inherit any comps and instead put them in yourself from parents-->
      <li Class="Core40k.CompProperties_AmmoChanger">
        <compClass>Core40k.Comp_AmmoChanger</compClass>
        <availableProjectiles>
          <li>BEWH_BolterRound</li>
          <li>BEWH_BolterRoundMetalStorm</li>
          <li>BEWH_BolterRoundInferno</li>
          <!--<li>BEWH_BolterRoundKraken</li>
          <li>BEWH_BolterRoundTempest</li>-->
        </availableProjectiles>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Styleable"/>
      <li Class="CompProperties_Biocodable"/>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponGun</nameMaker>
        <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
      <li Class="Core40k.CompProperties_MultiColor">
        <colorMaskAmount>3</colorMaskAmount>
        <defaultPrimaryColor>(0.23,0.23,0.23)</defaultPrimaryColor>        <!-- If this is not set, it will default to use color of the stuff its made out of (if any)-->
        <defaultSecondaryColor>(0.38,0.38,0.38)</defaultSecondaryColor>
        <defaultTertiaryColor>(0.79,0.58,0.08)</defaultTertiaryColor>
      </li>
    </comps>
    <modExtensions>
      <li Class="VEF.Things.ThingDefExtension">
        <weaponCarryDrawOffsets>
          <north>
            <drawOffset>(0, 0, -0.2)</drawOffset>
          </north>
          <east>
            <drawOffset>(-0.1, 0, -0.2)</drawOffset>
          </east>
          <south>
            <angleOffset>-20</angleOffset>
            <drawOffset>(0, 0, -0.2)</drawOffset>
          </south>
          <west>
            <drawOffset>(0.1, 0, -0.2)</drawOffset>
          </west>
        </weaponCarryDrawOffsets>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>